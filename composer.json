{
  "name": "dekodeinteraktiv/hogan-text",
  "description": "WYSIWYG Text Module for Hogan",
  "homepage": "https://github.com/dekodeinteraktiv/hogan-text",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">=7.0",
    "composer/installers": "~1.2",
    "dekodeinteraktiv/hogan-core": "^1.0"
  },
  "archive": {
    "exclude": [
      ".editorconfig",
      ".gitignore",
      "composer.json",
      "composer.lock",
      "LICENSE",
      "phpcs.xml"
    ]
  },
  "require-dev": {
    "dekodeinteraktiv/coding-standards": "^0.3.1"
  },
  "scripts" : {
    "test" : [
      "@composer install",
      "./vendor/bin/phpcs"
    ]
  }
}
